DayGroup = 
VAR DayOfMonth = DAY('Etsy Items – Combined'[Sale Date])
VAR PeriodNumber = CEILING(DayOfMonth / 7, 1)
RETURN
    SWITCH(
        TRUE(),
        DayOfMonth <= 7, "Days 1-7",
        DayOfMonth <= 14, "Days 8-14",
        DayOfMonth <= 21, "Days 15-21",
        DayOfMonth <= 28, "Days 22-28",
        "Days 29+"
    )

