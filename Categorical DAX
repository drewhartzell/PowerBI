Days Outstanding Band = 
SWITCH(
    TRUE(),
    [Days Outstanding] <= 3, "0-3 Days",
    [Days Outstanding] <= 9, "4-9 Days",
    [Days Outstanding] <= 29, "10-29 Days",
    [Days Outstanding] <= 59, "30-59 Days",
    [Days Outstanding] <= 89, "60-89 Days",
    "90+ Days"
)



